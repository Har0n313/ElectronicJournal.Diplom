<Window x:Class="ElectronicJournal.WPF.Views.AdminWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AdminWin" Height="800" Width="1000">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Label Background="#1E90FF" Content="Окно админа" Foreground="White" FontSize="20" Padding="5" />
                    <Label Background="#1E90FF" Foreground="White" FontSize="20" Padding="5" Content="Расписание группы" />

                    <!-- День: Понедельник -->
                    <TextBlock Text="Понедельник" FontWeight="Bold" Margin="0,10,0,5"/>
                    <DataGrid x:Name="mondayGrid" AutoGenerateColumns="False" Height="130" Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="№ пары" Binding="{Binding PairNumber}" Width="60" />
                            <DataGridTextColumn Binding="{Binding Time}" Width="135">
                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="Время начала/ окончания пары"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   Width="120"/>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                            </DataGridTextColumn>

                            <DataGridTextColumn Binding="{Binding Subject}" Width="235">
                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="Наименование учебной дисциплины, междисциплинарного курса"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   Width="230"/>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Ф.И.О преподавателя" Binding="{Binding Teacher}" Width="150"/>
                            <DataGridTextColumn Header="№ кабинета" Binding="{Binding Room}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Вторник -->
                    <TextBlock Text="Вторник" FontWeight="Bold" Margin="0,10,0,5"/>
                    <DataGrid x:Name="tuesdayGrid" AutoGenerateColumns="False" Height="130" Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="№ пары" Binding="{Binding PairNumber}" Width="60" />
                            <DataGridTextColumn Binding="{Binding Time}" Width="135">
                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="Время начала/ окончания пары"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   Width="120"/>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                            </DataGridTextColumn>

                            <DataGridTextColumn Binding="{Binding Subject}" Width="235">
                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="Наименование учебной дисциплины, междисциплинарного курса"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   Width="230"/>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Ф.И.О преподавателя" Binding="{Binding Teacher}" Width="150"/>
                            <DataGridTextColumn Header="№ кабинета" Binding="{Binding Room}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Среда -->
                    <TextBlock Text="Среда" FontWeight="Bold" Margin="0,10,0,5"/>
                    <DataGrid x:Name="wednesdayGrid" AutoGenerateColumns="False" Height="130" Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="№ пары" Binding="{Binding PairNumber}" Width="60" />
                            <DataGridTextColumn Binding="{Binding Time}" Width="135">
                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="Время начала/ окончания пары"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   Width="120"/>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                            </DataGridTextColumn>

                            <DataGridTextColumn Binding="{Binding Subject}" Width="235">
                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="Наименование учебной дисциплины, междисциплинарного курса"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   Width="230"/>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Ф.И.О преподавателя" Binding="{Binding Teacher}" Width="150"/>
                            <DataGridTextColumn Header="№ кабинета" Binding="{Binding Room}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Четверг -->
                    <TextBlock Text="Четверг" FontWeight="Bold" Margin="0,10,0,5"/>
